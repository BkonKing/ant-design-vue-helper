{
	"name": "vscode-ant-design-vue-helper",
	"displayName": "AntDV helper",
	"description": "A vscode extension for Ant-Design-Vue",
	"version": "1.0.6",
	"publisher": "ant-design-vue",
	"repository": {
		"type": "git",
		"url": "https://github.com/vueComponent/ant-design-vue-helper"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"icon": "antdv.png",
	"categories": [
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:vue",
		"onCommand:antdv-helper.search"
	],
	"contributes": {
		"commands": [
			{
				"command": "antdv-helper.search",
				"title": "antdv-helper.search"
			}
		],
		"keybindings": [
			{
				"command": "antdv-helper.search",
				"key": "shift+cmd+i",
				"when": "editorTextFocus"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/antdv.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Antdv Helper Configuration",
			"properties": {
				"antdv-helper.indent-size": {
					"type": "number",
					"default": 2,
					"description": "Indentation size of snippets"
				},
				"antdv-helper.quotes": {
					"type": "string",
					"default": "double"
				},
				"antdv-helper.link-url": {
					"type": "string",
					"default": "https://ant-design-vue.gitee.io"
				},
				"antdv-helper.editor.snippetSuggestions": {
					"type": "string",
					"default": "top"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "sh build.sh",
		"compile": "sh build.sh",
		"watch": "sh build.sh --watch",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^8.10.25",
		"tslint": "^5.8.0",
		"typescript": "^3.1.4",
		"vscode": "^1.1.25"
	},
	"dependencies": {
		"pretty": "^2.0.0",
		"shelljs": "^0.8.3"
	}
}